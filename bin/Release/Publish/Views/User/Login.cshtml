
@{
    ViewBag.Title = "Login";
}

<div class="container col-5 shadow-lg p-3 mb-5 bg-white rounded">
    <h3 class="bg-secondary text-light pl-2 pr-2">Entrar al Sistema</h3>
    <div class="col-12 pb-3 pt-3 bg-light text-center">
        <form>
            <div class="mb-3">
                @*<label for="username">Usuario</label>*@
                <div class="input-group w-75 mx-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">@@</span>
                    </div>
                    <input type="text" class="form-control" id="username" placeholder="Usuario" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>

            <div class="mb-3">
                @*<label for="password">Contraseña</label>*@
                <div class="input-group w-75 mx-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">@@</span>
                    </div>
                    <input type="password" class="form-control" id="password" placeholder="Contraseña" aria-describedby="inputGroupPrepend2" required>
                </div>
            </div>
            
            <button class="btn btn-danger w-75">
                Entrar
            </button>

            <a href="/user/RecoverPassword" class="d-block bg-light text-info pl-2 pr-2 pb-1 pt-1 mt-3 mb-0 text-center">Recuperar Contraseña</a>
        </form>
    </div>
</div>

