
@{
    ViewBag.Title = "Consulta Volante";
}

<div class="container col-12 shadow p-3 mb-5 bg-white rounded">
    <h3 class="bg-secondary text-light pl-2 pr-2">Consulta Volantes</h3>

    <div class="row">
        
        <div class="col-9 center-block">
            <table class="table">
                <thead class="bg-danger text-white">
                    <tr>
                        <th scope="col">Año</th>
                        <th scope="col">Mes</th>
                        <th scope="col">Quincena</th>
                        <th scope="col">Tipo Nomina</th>
                        <th class="text-center">Ver detalle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Payrolls)
                    {
                    <tr>
                        <td>@item.year</td>
                        <td>@item.month</td>
                        <td>@item.fortnight</td>
                        <td>@item.description</td>

                        <td align="center">
                            <a class="btn btn-sm btn-outline-dark" href="@Url.Action("ViewPayroll",new { period = @item.period, paytype = item.paytype })">
                                <i class="fa fa-search"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<span class="d-block bg-light text-danger pl-2 pr-2 pb-1 pt-1 mt-3 mb-0 text-center">@ViewBag.Message</span>

