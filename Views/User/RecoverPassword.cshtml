
@{
    ViewBag.Title = "Recuperar Contraseña";
}

<div class="container col-8 shadow p-3 mb-5 bg-white rounded">
    <h3 class="bg-secondary text-light pl-2 pr-2">Recuperar Contraseña</h3>
    <div class="col-12 pb-3 pt-3 bg-light">
        @using (Html.BeginForm())
        {
            <div class="form-row">
                <div class="col-4 mb-3">
                    <label for="validationDefault01">Código de Empleado</label>
                    <input type="text" class="form-control" id="EmployeeID" required>
                </div>
                <div class="col-8 mb-3">
                    <label for="validationDefault02">Cédula</label>
                    <input type="text" class="form-control col-12" id="Identification" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12 mb-3">
                    <label for="validationDefaultUsername">Correo</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="idEmailDeco">@@</span>
                        </div>
                        <input type="text" class="form-control col-12" id="idEmail" aria-describedby="inputGroupPrepend2" required>
                    </div>
                </div>
            </div>

            <button id="recoverPass" class="btn btn-danger w-100" type="button">
                Recuperar
            </button>

            <span id="message" class="d-block bg-light text-info pl-2 pr-2 pb-1 pt-1 mt-3 mb-0 text-center">La nueva contraseña ha sido enviada al correo especificado aquí</span>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">

    const emailBy = (employeeId) => {
        $.ajax({
            "url": `/Ajax/GetEmailByEmployeeId/?employeeId=${employeeId}`,
            "type": "GET",
            "success": function (data) {
                $("#idEmail").val(data);
            }
        })
    }

    $(document).ready(function () {

        $(".numericOnly").keypress(function (e) {
            if (String.fromCharCode(e.keyCode).match(/[^0-9]/g))  return false;
        });

        $("#EmployeeID").keyup(function () {
            if (this.value.length >= 4)
                return false;

            if (this.value.length >= 2) {
                emailBy(this.value);
            }
        });

        $("#Identification").keyup(function () {
            if (this.value.length >= 11)
                return false;
        });

        $("#PasswordHash").keyup(function () {
            if (this.value.length < 4 || this.value === $("#EmployeeID").val()) {
                $("#createUser").attr("disabled", "disabled");
                $("#createUser").addClass("disable-button");
                $("#message").text('Verifique que la contraseña tiene minimo 4 digitos y que no es igual al Código de Empleado.')
            }
            else {
                $("#createUser").removeAttr("disabled");
                $("#createUser").removeClass("disable-button");
                $("#message").text('');
            }
        });

    });


</script>
